# ============================================
# ELITE 8 AI VIDEO GENERATION SYSTEM
# Environment Configuration Template
# ============================================

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# A2E AI API (Video Generation)
# ============================================
# Get your API key from https://a2e.ai/
# Pro Plan: $9.90/month + topups as needed
A2E_API_KEY=your_a2e_api_key_here
A2E_CONFIG_PATH=/workspace/waifugen_system/config/avatars/pro_plan_optimized.json

# ============================================
# IPRoyal Residential Proxies (Budget: €15/mo)
# ============================================
# Sign up at https://iproyal.com
# Use discount code: IPR50 for $1.75/GB (regular $7/GB)
# Monthly budget: ~10GB for €15
# Expected cost: $17.50/month (approximately €15)

IPROYAL_ENABLED=true
IPROYAL_USERNAME=your_iproyal_username
IPROYAL_PASSWORD=your_iproyal_password
IPROYAL_HOST=geo.iproyal.com
IPROYAL_PORT=12345
IPROYAL_PROTOCOL=http
IPROYAL_MONTHLY_GB_LIMIT=10
IPROYAL_DAILY_GB_LIMIT=0.5

# Alternative proxy format (if using residential pool)
# IPRROYAL_PROXY_URL=http://username:password@gw.iproyal.com:12345

# Fallback: Use direct connection if proxy fails
USE_DIRECT_FALLBACK=true

# ============================================
# TikTok API
# ============================================
# Create app at https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://yourdomain.com/auth/tiktok/callback

# ============================================
# Instagram/Facebook API
# ============================================
# Create app at https://developers.facebook.com/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# ============================================
# YouTube API
# ============================================
# Create credentials at https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token
YOUTUBE_API_KEY=your_youtube_api_key

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=/workspace/waifugen_system/database/elite8.db
SCHEDULER_DB_PATH=/workspace/waifugen_system/database/scheduler.db

# ============================================
# Social Media Configuration
# ============================================
SOCIAL_CONFIG_PATH=/workspace/waifugen_system/config/social/social_config.json
IPROYAL_CONFIG_PATH=/workspace/waifugen_system/config/social/iproyal_config.json

# ============================================
# Telegram Notifications (Optional)
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# ============================================
# AWS S3 for Video Storage (Optional)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================
# Application Settings
# ============================================
# Environment: development, staging, production
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Content Generation Settings
# ============================================
# 4 reels per day schedule
DAILY_REEL_TARGET=4
VIDEO_DURATION_SECONDS=15
DEFAULT_ASPECT_RATIO=9:16
DEFAULT_RESOLUTION=1080x1920

# Character rotation
CHARACTER_ROTATION=["miyuki_sakura", "airi_neo", "hana_nakamura", "aiko_hayashi", "rio_mizuno", "ren_ohashi", "chiyo_sasaki", "jin_kawasaki"]

# Posting schedule (Asia/Tokyo timezone)
POSTING_TIMES=["08:00", "12:00", "18:00", "21:00"]
POSTING_TIMEZONE=Asia/Tokyo

# ============================================
# Cost Management
# ============================================
# Monthly budget in USD
MONTHLY_BUDGET_USD=50.00

# A2E credits management
A2E_MONTHLY_CREDITS_TARGET=3600
A2E_TOPUP_ENABLED=true
A2E_TOPUP_THRESHOLD=500
A2E_TOPUP_AMOUNT=1800
